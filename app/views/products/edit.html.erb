<div class="card">
  <div class="card-header bg-success text-white">
    <div class="col-md-12 row">
      <div class="col-md-10">
        <h1>Editar Producto</h1>
      </div>
      <div class="col-md-2">
        <%= link_to url_for(products_path), class: 'btn btn-secondary', id: 'index_button' do%>
          <i class="fas fa-list-ul"></i> Volver
        <% end %>
        <%= link_to url_for(@product), class: 'btn btn-info', id: 'index_button' do%>
          <i class="fas fa-list-ul"></i> Mostrar
        <% end %>
      </div>
    </div>
  </div>
  <div class="card-body">
    <center>
      <%= render 'form', product: @product %>
    </center>
  </div>
</div>
